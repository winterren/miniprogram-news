/* catagory */
.cata{
  background: linear-gradient(#3399DB, #3193D3);
}
.cata__list{
  display: flex;
  justify-content: space-around;
}
.cata__item{
  font-size: 32rpx;
  color:rgba(255,255,255,0.6);
  line-height: 48rpx;
  margin-bottom: 20rpx;
}
.cata__item--active{
  color:#fff;
  font-weight: bold;
  position: relative;
}
.cata__item--active:after{
  content : "";
  position: absolute;
  left    : 30%;
  bottom  : -10rpx;
  width   : 40%; 
  border-bottom: 5rpx solid rgba(255,255,255,0.6);
}
/* article */
.article{
  margin:0 30rpx; 
}
.article__item{
  padding: 15rpx 0; 
  display: flex;
  border-bottom: 1rpx solid #eee;
}
.article__item__inf{
  flex:1;
}
.article__item__inf__title{
  font-size:32rpx;
  line-height: 50rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.article__item__inf__desc{
  margin-top:13rpx;
  font-size:30rpx;
  line-height: 42rpx;
  color: #999;
}
.article__item__pic{
  margin-left: 30rpx;
  height: 155rpx;
  width: 230rpx;
  border-radius: 10rpx;
}
/* article--firstImage */
.article--first{
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  margin:30rpx auto;
  width: 690rpx;
  height: 400rpx;
  position: relative;
  border-radius: 10rpx;
}
.article--first__title{
  text-shadow: -1rpx -1rpx #111 ; 
  font-weight: bold;
  font-size:36rpx;
  line-height: 50rpx;
  color: #eee;
  padding: 0 25rpx;
}
.article--first__desc{
  font-size:30rpx;
  line-height: 42rpx;
  color: #eee;
  opacity: 0.85;
  padding: 10rpx 25rpx;
}
.article--first__pic{
  position: absolute;
  left: 0;
  top: 0;
  z-index: -10;
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
}
.article--first__tag--hot{
  position: absolute;
  right: 0;
  top: 0;
  padding: 10rpx 10rpx 10rpx 20rpx;
  font-size: 26rpx;
  color: #FFF;
  background: #da440c;
  opacity: 0.6;
  border-radius: 0rpx 10rpx 0rpx 25rpx;
  z-index: 100;
}
/* swiper */
.swiper--container{
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  margin:30rpx auto;
  width: 690rpx;
  height: 400rpx;
  position: relative;
  border-radius: 10rpx;
}
.swiper__block{
  border-radius:10rpx;
}
.swiper__block__tag--hot{
  position: absolute;
  right: 0;
  top: 0;
  padding: 10rpx 10rpx 10rpx 20rpx;
  font-size: 26rpx;
  color: #FFF;
  background: #da440c;
  opacity: 0.6;
  border-radius: 0rpx 10rpx 0rpx 25rpx;
  z-index: 100;
}
.swiper__block__title{
  text-shadow: -1rpx -1rpx #111 ; 
  font-weight: bold;
  font-size:36rpx;
  line-height: 50rpx;
  color: #eee;
  padding: 0 25rpx;
  z-index: 100;
  position: absolute;
  bottom: 60rpx;
}
.swiper__block__desc{
  font-size:30rpx;
  line-height: 42rpx;
  color: #eee;
  opacity: 0.85;
  padding: 10rpx 25rpx;
  z-index: 100;
  position: absolute;
  bottom:0;
}
