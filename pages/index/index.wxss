/* catagory */
.cata{
  background: linear-gradient(#3399DB, #3193D3);
}
.cata__list{
  display: flex;
  justify-content: space-around;
}
.cata__item{
  font-size: 32rpx;
  color:rgba(255,255,255,0.6);
  line-height: 48rpx;
  margin-bottom: 20rpx;
}
.cata__item--active{
  color:#fff;
  font-weight: bold;
  position: relative;
}
.cata__item--active:after{
  content : "";
  position: absolute;
  left    : 30%;
  bottom  : -10rpx;
  width   : 40%; 
  border-bottom: 5rpx solid rgba(255,255,255,0.6);
}
/* article */
.article{
  margin:0 30rpx; 
}
.article__item{
  padding: 15rpx 0; 
  display: flex;
  border-bottom: 1rpx solid #eee;
}
.article__item__inf{
  flex:1;
}
.article__item__inf__title{
  font-size:36rpx;
  line-height: 50rpx;
  height: 100rpx;
}
.article__item__inf__desc{
  margin-top:13rpx;
  font-size:30rpx;
  line-height: 42rpx;
  color: #999;
}
.article__item__pic{
  margin-left: 30rpx;
  height: 155rpx;
  width: 230rpx;
}
.article--first{
  margin:30rpx auto;
  width: 690rpx;
  height: 400rpx;
  position: relative;
  border-radius: 10rpx;
}
.article--first__pic{
  position: absolute;
  left: 0;
  top: 0;
  z-index: -10;
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
}

.a,.b,.c{
  display: inline-block;
  height: 50rpx;
}
.a{
  background: magenta;
  width: 375rpx;
}
.b{
  background: indianred;
  width: 375rpx;
}
.c{
  background: olive;
  width: 30rpx;
}